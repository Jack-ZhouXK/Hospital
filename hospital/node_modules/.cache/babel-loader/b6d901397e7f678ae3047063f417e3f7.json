{"ast":null,"code":"//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\n//\nexport default {\n  created: function created() {\n    this.loading();\n  },\n  methods: {\n    loading: function loading() {\n      //获取元素样式\n      var signInBtn = document.getElementById(\"signIn\");\n      var signUpBtn = document.getElementById(\"signUp\");\n      var fistForm = document.getElementById(\"form1\");\n      var secondForm = document.getElementById(\"form2\");\n      var container = document.querySelector(\".container\"); //移除signInBtn事件句柄\n\n      signInBtn.onclick(function () {\n        container.classList.remove(\"right-panel-active\");\n      }); //向signUpBtn添加事件句柄\n\n      signUpBtn.addEventListener(\"click\", function () {\n        container.classList.add(\"right-panel-active\");\n      });\n      fistForm.addEventListener(\"submit\", function (e) {\n        return e.preventDefault();\n      });\n      secondForm.addEventListener(\"submit\", function (e) {\n        return e.preventDefault();\n      });\n    }\n  }\n};","map":{"version":3,"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAuCA;AACAA,SADA,qBACA;AACA;AACA,GAHA;AAIAC;AACAC,WADA,qBACA;AACA;AACA;AACA;AACA;AACA;AACA,2DANA,CAOA;;AACAC;AACAC;AACA,OAFA,EARA,CAWA;;AACAC;AACAD;AACA,OAFA;AAIAE;AAAA;AAAA;AACAC;AAAA;AAAA;AACA;AAnBA;AAJA","names":["created","methods","loading","signInBtn","container","signUpBtn","fistForm","secondForm"],"sourceRoot":"src/components","sources":["login.vue"],"sourcesContent":["<template>\r\n  <div class=\"container right-panel-active\">\r\n    <!-- 注册 -->\r\n    <div class=\"container__form container--signup\">\r\n      <form action=\"#\" class=\"form\" id=\"form1\">\r\n        <h2 class=\"form__title\">注册</h2>\r\n        <input type=\"text\" placeholder=\"用户名\" class=\"input\" />\r\n        <input type=\"email\" placeholder=\"账号\" class=\"input\" />\r\n        <input type=\"password\" placeholder=\"密码\" class=\"input\" />\r\n        <button class=\"btn\">注册</button>\r\n      </form>\r\n    </div>\r\n\r\n    <!-- 登录 -->\r\n    <div class=\"container__form container--signin\">\r\n      <form action=\"#\" class=\"form\" id=\"form2\">\r\n        <h2 class=\"form__title\">登录</h2>\r\n        <input type=\"email\" placeholder=\"账号\" class=\"input\" />\r\n        <input type=\"password\" placeholder=\"密码\" class=\"input\" />\r\n        <a href=\"#\" class=\"link\" style=\"color: skyblue\">忘记密码?</a>\r\n        <button class=\"btn\">登录</button>\r\n      </form>\r\n    </div>\r\n\r\n    <!-- Overlay -->\r\n    <div class=\"container__overlay\">\r\n      <div class=\"overlay\">\r\n        <div class=\"overlay__panel overlay--left\">\r\n          <button class=\"btn\" id=\"signIn\">登录</button>\r\n        </div>\r\n        <div class=\"overlay__panel overlay--right\">\r\n          <button class=\"btn\" id=\"signUp\">注册</button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  created() {\r\n    this.loading();\r\n  },\r\n  methods: {\r\n    loading() {\r\n      //获取元素样式\r\n      const signInBtn = document.getElementById(\"signIn\");\r\n      const signUpBtn = document.getElementById(\"signUp\");\r\n      const fistForm = document.getElementById(\"form1\");\r\n      const secondForm = document.getElementById(\"form2\");\r\n      const container = document.querySelector(\".container\");\r\n      //移除signInBtn事件句柄\r\n      signInBtn.onclick(() => {\r\n        container.classList.remove(\"right-panel-active\");\r\n      });\r\n      //向signUpBtn添加事件句柄\r\n      signUpBtn.addEventListener(\"click\", () => {\r\n        container.classList.add(\"right-panel-active\");\r\n      });\r\n\r\n      fistForm.addEventListener(\"submit\", (e) => e.preventDefault());\r\n      secondForm.addEventListener(\"submit\", (e) => e.preventDefault());\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n:root {\r\n  